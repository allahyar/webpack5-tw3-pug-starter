extends ../../_layout

block variables
    //- define variables used in layout
    - pageTitle = 'Start site'

append style
    //- add page styles
    link(href=require('./index.css') rel='stylesheet')
append script
    //- add page scripts
    script(src=require('./index.js'))

block content
    .container
        h2.text-3xl.font-bold.mt-3.mb-6 Latest Article
        .grid.grid-cols-12.gap-10
            each val in [1, 2, 3]
                include ../../components/_postItem